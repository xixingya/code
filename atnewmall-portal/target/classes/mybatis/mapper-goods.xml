<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.atguigu.atnewmall.portal.dao.GoodsDao" >

    <resultMap type="com.atguigu.atnewmall.bean.Goods" id="goodsResultMap">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="remark" column="remark"/>
        <result property="price" column="price"/>
        <result property="iconpath1" column="iconpath1"/>
        <result property="stock" column="stock"/>
        <association property="goodsInfo" javaType="com.atguigu.atnewmall.bean.GoodsInfo">
            <result property="favcnt" column="favcnt"/>
        </association>
        <association property="sellerInfo" javaType="com.atguigu.atnewmall.bean.SellerInfo">
            <result property="introduce" column="introduce"/>
            <result property="remark" column="siremark"/>
            <result property="cstel" column="cstel"/>
        </association>
    </resultMap>

    <select id="queryById" resultMap="goodsResultMap">
        select
            g.*,
            gi.favcnt as favcnt,
            si.introduce as introduce,
            si.remark as siremark,
            si.tel as sitel,
            si.cstel as cstel
        from t_goods g
        join t_goods_info gi on g.id = gi.goodsid
        join t_seller_info si on g.memberid = si.memberid
        where g.id = #{id}
    </select>

    <select id="queryGoodsInfoById" resultType="com.atguigu.atnewmall.bean.GoodsInfo">
        select * from t_goods_info where goodsid = #{goodsid}
    </select>

    <select id="queryAll" resultType="com.atguigu.atnewmall.bean.Goods">
        select
            *
        from t_goods
    </select>

</mapper>